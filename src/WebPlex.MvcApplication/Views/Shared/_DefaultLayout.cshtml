@{
	Layout = T4Routes.Shared.Views._LayoutBase;
	Breadcrumb.Items(items => items.Add.Text(Views.Literal_Product).Result(T4Routes.Home.Index()));
}
<div class="container public-area">
	<h3 class="muted visible-desktop">@Views.Literal_Product</h3>
	@Html.Partial(T4Routes.Shared.Views._Content_Navbar)
	@Html.Partial(T4Routes.Shared.Views._Content_Alerts)
	@Html.Partial(T4Routes.Shared.Views._Content_Breadcrumb)
	@RenderBody()
	<hr>
	<div id="footer">
		@Html.Partial(T4Routes.Shared.Views._Footer)
	</div>
</div>

@section Styles {
	@RenderSection("Styles", false)
}

@section Scripts {
	@RenderSection("Scripts", false)
}